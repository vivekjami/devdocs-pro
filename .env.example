# DevDocs Pro Configuration Template
# ===================================
# Copy this file to .env and fill in your actual values

# Authentication 
DEVDOCS_API_KEY=your_api_key_here

# AI Processing - Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Traffic Sampling Configuration
DEVDOCS_SAMPLING_RATE=0.1  # Sample 10% of traffic (0.0-1.0)
DEVDOCS_MAX_BODY_SIZE=10485760  # 10MB max body size in bytes

# Service Configuration
DEVDOCS_SERVER_URL=https://api.devdocs.pro
DEVDOCS_PORT=3000

# Security & Privacy
DEVDOCS_ENABLE_PII_FILTERING=true
DEVDOCS_EXCLUDED_PATHS=/health,/metrics,/favicon.ico,/status

# Body Capture Settings
DEVDOCS_CAPTURE_REQUEST_BODIES=true
DEVDOCS_CAPTURE_RESPONSE_BODIES=true
DEVDOCS_ENABLE_COMPRESSION_DETECTION=true
DEVDOCS_ENABLE_DECOMPRESSION=true

# Storage Configuration
DEVDOCS_TEMP_DIR=/tmp/devdocs-bodies
DEVDOCS_MAX_MEMORY_SIZE=1048576  # 1MB max in-memory body size
DEVDOCS_STORAGE_DAYS=30  # Days to keep historical data

# AI Processing Tuning
DEVDOCS_AI_BATCH_SIZE=10  # Number of samples per AI batch
DEVDOCS_AI_BATCH_TIMEOUT=30  # Seconds to wait before processing incomplete batch
DEVDOCS_AI_TEMPERATURE=0.2  # AI creativity (0.0-1.0, lower = more consistent)
DEVDOCS_AI_MAX_TOKENS=2048  # Maximum tokens per AI request

# Logging & Monitoring
RUST_LOG=info,devdocs=debug
DEVDOCS_LOG_LEVEL=info
